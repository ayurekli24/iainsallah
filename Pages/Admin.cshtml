@page
@model iainsallah.Pages.AdminModel

@{
}
<html>
<head>
    <title>User List</title>
    <style>
        table {
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <h1>User List</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
            </tr>
        }
    </table>
</body>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Attendance</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <td>@Model.Users[i].Id</td>
                    <td>@Model.Users[i].UserName</td>
                    <td>
                        <input type="hidden" asp-for="@Model.Users[i].Id" />
                        <input type="hidden" asp-for="@Model.Users[i].Email" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit">Save Attendance</button>
</form>
</html> 